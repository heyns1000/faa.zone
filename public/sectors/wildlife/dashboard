    <script>
        async function generateAnomaly(buttonElement, label, currentFunction) {
            const outputDiv = buttonElement.nextElementSibling; // The div to display the output
            const originalButtonText = buttonElement.innerHTML;

            // Disable button and show loading
            buttonElement.disabled = true;
            buttonElement.innerHTML = 'Generating...';
            outputDiv.innerHTML = ''; // Clear previous output

            const prompt = `Generate a very brief (1-2 sentences), subtly unsettling, or slightly surreal "AI Anomaly Report" for the function: '${label}' which is described as '${currentFunction}'. Make it sound like a system log entry or an unusual observation from an AI.`;

            let chatHistory = [];
            chatHistory.push({ role: "user", parts: [{ text: prompt }] });

            const payload = { contents: chatHistory };
            const apiKey = ""; // Leave as-is for Canvas to provide
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    outputDiv.innerHTML = `<div class="llm-anomaly-report">${text}</div>`;
                } else {
                    outputDiv.innerHTML = `<div class="llm-anomaly-report text-red-600">Error: Anomaly report generation failed.</div>`;
                    console.error("Gemini API returned no candidates or content:", result);
                }
            } catch (error) {
                outputDiv.innerHTML = `<div class="llm-anomaly-report text-red-600">Error: Failed to connect to Gemini API.</div>`;
                console.error("Error calling Gemini API:", error);
            } finally {
                // Re-enable button and restore original text
                buttonElement.disabled = false;
                buttonElement.innerHTML = originalButtonText;
            }
        }
    </script>

</body>
</html>
