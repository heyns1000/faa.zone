<!-- SCRIPT FOR LIVE CHARTS -->
<script type="module">
document.addEventListener('DOMContentLoaded', () => {
  // Main Ore Pulse
  const ctx = document.getElementById('gradeChart').getContext('2d');
  const brands = ['OreXcel', 'Minerva', 'Digium', 'MineForge', 'MineralVision'];
  const colors = ['#fbbf24', '#3b82f6', '#10b981', '#ec4899', '#8b5cf6'];

  const gradeData = { labels: [], datasets: brands.map((b, i) => ({ label: b, data: [], borderColor: colors[i], borderWidth: 2, fill: false, tension: 0.4 })) };
  const gradeChart = new Chart(ctx, { type: 'line', data: gradeData, options: { responsive: true, maintainAspectRatio: false, animation: false, scales: { y: { min: 60, max: 100, ticks: { callback: (v) => v + '%' } } }, plugins: { legend: { position: 'bottom' } } } });

  function pushGrade() {
    const now = new Date();
    if (gradeData.labels.length > 30) { gradeData.labels.shift(); gradeData.datasets.forEach(d => d.data.shift()); }
    gradeData.labels.push(now.toLocaleTimeString());
    gradeData.datasets.forEach(d => d.data.push(+(80 + Math.random() * 12).toFixed(2)));
    gradeChart.update();
  }
  pushGrade(); setInterval(pushGrade, 3000);

  // AutoBorn Mini Pulse
  const scrolls = [{ id: 'scroll-9082', brand: 'AutoBorn‚Ñ¢ Prime', icon: 'üöó', type: 'Master Scroll', licenseFee: 'R12,000', monthly: 'R999 (Live)', royalty: '9.2% / Split: G', region: 'SA | EU | APAC', base: 84, color: '#facc15' }];
  const autobornRoot = document.getElementById('autoborn-sync-root');
  const pulseCharts = {};

  scrolls.forEach(scroll => {
    const card = document.createElement('div');
    card.className = 'bg-white rounded-xl shadow p-4 flex flex-col space-y-2';
    card.innerHTML = `
      <div class="flex items-center space-x-2">
        <span class="text-2xl">${scroll.icon}</span>
        <h4 class="font-bold">${scroll.brand}</h4>
      </div>
      <p class="text-xs text-gray-500">${scroll.type}</p>
      <div class="w-full h-48">
        <canvas id="pulse-${scroll.id}" class="w-full h-full"></canvas>
      </div>
      <div class="grid grid-cols-2 gap-1 text-xs mt-2">
        <span class="font-semibold">License:</span><span>${scroll.licenseFee}</span>
        <span class="font-semibold">Monthly:</span><span>${scroll.monthly}</span>
        <span class="font-semibold">Royalty:</span><span>${scroll.royalty}</span>
        <span class="font-semibold">Region:</span><span>${scroll.region}</span>
      </div>
    `;
    autobornRoot.appendChild(card);

    const miniCtx = document.getElementById(`pulse-${scroll.id}`).getContext('2d');
    const miniChart = new Chart(miniCtx, { type: 'line', data: { labels: [], datasets: [{ label: scroll.brand, data: [], borderColor: scroll.color, borderWidth: 2, fill: false, tension: 0.4 }] }, options: { responsive: true, maintainAspectRatio: false, animation: false, scales: { y: { min: scroll.base - 5, max: scroll.base + 5, ticks: { display: false } }, x: { display: false } }, plugins: { legend: { display: false }, tooltip: { enabled: false } } } });

    pulseCharts[scroll.id] = { chart: miniChart, base: scroll.base };
  });

  function updateMiniPulses() {
    const now = new Date().toLocaleTimeString();
    Object.values(pulseCharts).forEach(({ chart, base }) => {
      if (chart.data.labels.length > 20) { chart.data.labels.shift(); chart.data.datasets[0].data.shift(); }
      chart.data.labels.push(now);
      chart.data.datasets[0].data.push(+(base + (Math.random() - 0.5) * 1.8).toFixed(2));
      chart.update();
    });
  }
  setInterval(updateMiniPulses, 3000);
});
</script>

